<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity"
    android:background="@drawable/bg_number_game">

    <LinearLayout
        android:id="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <EditText
            android:id="@+id/et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="500 ~ 1000 사이 숫자 입력"
            android:fontFamily="@font/cookierun_black"
            android:gravity="center"
            android:layout_marginBottom="30dp"
            android:background="@drawable/border_et"
            android:padding="8dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="확        인"
            android:textStyle="bold"
            android:textSize="20sp"
            android:fontFamily="@font/cookierun_black"
            android:layout_marginLeft="8dp"
            android:background="@drawable/button_click_color_long"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_retry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="재   시   작"
            android:textStyle="bold"
            android:textSize="20sp"
            android:fontFamily="@font/cookierun_black"
            android:layout_marginLeft="8dp"
            android:background="@drawable/button_click_color_long"
            android:visibility="gone"/>
    </LinearLayout>


    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="결과값"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="24sp"
        android:fontFamily="@font/cookierun_black"
        android:background="@drawable/border_et"
        android:gravity="center"
        android:layout_above="@id/layout_main"
        android:layout_marginBottom="60dp"
        android:padding="8dp"/>

</RelativeLayout>